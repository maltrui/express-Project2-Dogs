<!DOCTYPE html>
<html>

<%- include('./partials/header')  %> 
<%- include('./partials/nav') %>
<body>
<table>
  <td>
  <% if(dogPhoto.charAt(dogPhoto.length - 1) == '4'){ %>
    <video class = 'randomDog' autoplay controls>
      <source src='<%= dogPhoto %>' type='video/mp4'>
    </video>
  <% } else { %>
    <img class = 'randomDog' src='<%= dogPhoto %>' alt ='Dog should be here' >
  <% } %>
  </td>
  <td>
  <% if (user) { %>
    <form id="add-dog-post" method="POST"
    action="/post/create">
    <td>
      <label>Review:</label>
      <textarea name="content"></textarea>
    </td>
    <td>
      <label>Rating:</label>
      <select type ='number' name="rating">
        <option value="10">10</option>
        <option value="11">11</option>
        <option value="12">12</option>
        <option value="13">13</option>
        <option value="14">14</option>
        <option value="15">15</option>
      </select>
    </td>
    <td>
      <input type="submit" value="Post">
      <input name="photo" value="<%=dogPhoto%>" placeholder="<%=dogPhoto%>" class = 'invisible'>
    </td>
    </form>
  <% } else { %>
    <p> Log-In to make a Post! </p>
 <% } %>
  </table>
</body>

</html>